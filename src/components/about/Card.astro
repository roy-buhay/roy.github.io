---
import { Image } from "astro:assets";
import Illustration from "@components/about/Illustration.astro";
---

<div data-about-card class="animate card">
    <div class="card__content">
        <h3 class="animate">About Me</h3>
        <p class="animate">A bit of background and what I'm studying</p>
        <div class="animate card__img">
            <Illustration />
        </div>
    </div>
</div>

<style>
    .card__content {
        background-color: var(--secondary-color);
    }
    .card__content:active {
        background-color: var(--secondary-hover-color);
    }
</style>
