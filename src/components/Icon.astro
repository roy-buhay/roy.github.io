---
export interface Props {
    icon: string;
    showLabel?: boolean;
    size?: string;
    color?: string;
}

const { icon, showLabel = true } = Astro.props as Props;

const files = import.meta.glob("../../src/assets/svg/*.svg", {
    eager: true,
    as: "raw",
});
---

<div class="icon__container">
    <span class="icon"
        ><Fragment set:html={files[`../assets/svg/${icon}.svg`]} /></span
    >
    {showLabel && <p class="icon__label">{icon}</p>}
</div>

<style>
    :root {
        --svg-fill: #839aaf;
    }
    .icon__container {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        color: var(--svg-fill);
        /* fill: var(--svg-fill); */
    }
    .icon {
        width: 1.3rem;
        height: 1.3rem;
        display: block;
    }
    .icon__label {
        line-height: 1;
        margin-top: 0;
        text-transform: capitalize;
    }
</style>
